<?xml version="1.0" encoding="UTF-8"?>
<customUI xmlns="http://schemas.microsoft.com/office/2009/07/customui" onLoad="Ribbon_Load">
    <ribbon>
        <tabs>
            <tab idMso="TabAddIns" label="Gold DSL">
                <group id="AuGroup" label="Gold - DSL">
                    <button id="AuValidate" label="Validate" screentip="Validate" onAction="OnValidateAction"
                            supertip="Validates the current page." size="large" getImage="ValidateGetImage" />

                    <button id="AuExport" label="Export" screentip="Export" onAction="OnExportAction"
                            supertip="Exports the current page." size="large" getImage="ExportGetImage" />

                    <dropDown id="AuMode" label="Mode" onAction="OnModeAction"
                              getSelectedItemIndex="ModeGetSelectedItemIndex" getItemCount="ModeGetItemCount" getItemLabel="ModeGetItemLabel" />
                </group>
            </tab>
        </tabs>
    </ribbon>
</customUI>

