<?xml version="1.0" encoding="UTF-8"?>
<customUI xmlns="http://schemas.microsoft.com/office/2009/07/customui" onLoad="Ribbon_Load">
    <ribbon>
        <tabs>
            <tab idMso="TabAddIns" label="Gold DSL">
                <group id="AuGroup" label="Gold - DSL">
                    <button id="AuValidateCur" label="Validate" screentip="Validate" onAction="OnValidateCurrentAction"
                            supertip="Validates the current page." size="large" getImage="ValidateCurrentGetImage" />

                    <button id="AuValidateAll" label="Validate All" screentip="Validate all" onAction="OnValidateAllAction"
                            supertip="Validates all pages." size="large" getImage="ValidateAllGetImage" />

                    <button id="AuExportCur" label="Export" screentip="Export" onAction="OnExportCurrentAction"
                            supertip="Exports the current page." size="large" getImage="ExportCurrentGetImage" />

                    <button id="AuExportAll" label="Export all" screentip="Export all" onAction="OnExportAllAction"
                            supertip="Exports the current page." size="large" getImage="ExportAllGetImage" />

                    <dropDown id="AuMode" label="Mode" onAction="OnModeAction"
                              getSelectedItemIndex="ModeGetSelectedItemIndex" getItemCount="ModeGetItemCount" getItemLabel="ModeGetItemLabel" />
                </group>
            </tab>
        </tabs>
    </ribbon>
</customUI>

